<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".splash_activity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="411dp"
        android:layout_height="888dp"
        android:layout_marginTop="-2dp"
        android:alpha="0.1"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/background" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/add_blog_button_in_home"
        android:layout_width="35dp"
        android:layout_height="40dp"

        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:elevation="12dp"


        android:padding="10dp"
        android:translationZ="12dp"
        app:backgroundTint="@color/blue"
        app:cornerRadius="150dp"
        app:icon="@drawable/plus_icon_outline"
        app:iconSize="16dp"
        app:iconTint="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/newfeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="22dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/love_ya_like_a_sister"
        android:text="New Feed"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <androidx.cardview.widget.CardView
        android:id="@+id/imagecard"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="22dp"
        app:cardCornerRadius="100dp"
        app:cardPreventCornerOverlap="true"

        app:cardUseCompatPadding="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/person2" />
    </androidx.cardview.widget.CardView>

    <ImageButton
        android:id="@+id/imagebutton"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="24dp"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toStartOf="@+id/imagecard"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/save_red_fill" />

    <SearchView
        android:id="@+id/searchView"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:elevation="2dp"
        android:iconifiedByDefault="false"
        android:queryHint="Search"
        app:layout_constraintEnd_toEndOf="@+id/imagecard"
        app:layout_constraintStart_toStartOf="@+id/newfeed"
        app:layout_constraintTop_toBottomOf="@+id/imagecard" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycleviewlist"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:animateLayoutChanges="false"
        android:clipToPadding="false"
        android:duplicateParentState="false"
        android:padding="5dp"
        android:translationZ="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/searchView"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/searchView"
        app:layout_constraintTop_toBottomOf="@+id/searchView"
        tools:listitem="@layout/item_blog">

    </androidx.recyclerview.widget.RecyclerView>


</androidx.constraintlayout.widget.ConstraintLayout>